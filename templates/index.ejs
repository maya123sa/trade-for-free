<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: #333;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .header {
            text-align: center;
            color: white;
            margin-bottom: 40px;
        }
        
        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        
        .header p {
            font-size: 1.2rem;
            opacity: 0.9;
        }
        
        .dashboard {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }
        
        .card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }
        
        .card h3 {
            color: #667eea;
            margin-bottom: 15px;
            font-size: 1.3rem;
        }
        
        .stock-input {
            width: 100%;
            padding: 12px;
            border: 2px solid #e1e5e9;
            border-radius: 8px;
            font-size: 16px;
            margin-bottom: 15px;
            transition: border-color 0.3s ease;
        }
        
        .stock-input:focus {
            outline: none;
            border-color: #667eea;
        }
        
        .btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            transition: transform 0.2s ease;
            width: 100%;
        }
        
        .btn:hover {
            transform: scale(1.02);
        }
        
        .market-status {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: bold;
            margin-bottom: 15px;
        }
        
        .market-open {
            background: #d4edda;
            color: #155724;
        }
        
        .market-closed {
            background: #f8d7da;
            color: #721c24;
        }
        
        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 15px;
            margin-top: 20px;
        }
        
        .feature {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 10px;
            text-align: center;
        }
        
        .feature h4 {
            color: #667eea;
            margin-bottom: 8px;
        }
        
        .results {
            margin-top: 20px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 10px;
            display: none;
        }
        
        .loading {
            text-align: center;
            color: #667eea;
            font-style: italic;
        }
        
        @media (max-width: 768px) {
            .header h1 {
                font-size: 2rem;
            }
            
            .dashboard {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>ðŸ‡®ðŸ‡³ Indian Stock Technical Analysis</h1>
            <p>Advanced NSE/BSE Market Analysis Platform</p>
        </div>
        
        <div class="dashboard">
            <div class="card">
                <h3>ðŸ“ˆ Stock Analysis</h3>
                <div id="market-status" class="market-status">Loading market status...</div>
                <input type="text" id="stock-symbol" class="stock-input" placeholder="Enter stock symbol (e.g., RELIANCE, TCS, INFY)" maxlength="20">
                <button onclick="analyzeStock()" class="btn">Analyze Stock</button>
                <div id="stock-results" class="results"></div>
            </div>
            
            <div class="card">
                <h3>ðŸ”¥ Sector Heatmap</h3>
                <p>View sector-wise performance across NSE indices</p>
                <button onclick="loadSectorHeatmap()" class="btn">Load Heatmap</button>
                <div id="sector-results" class="results"></div>
            </div>
            
            <div class="card">
                <h3>âš¡ ORB Scanner</h3>
                <p>Opening Range Breakout opportunities (9:15-9:45 AM IST)</p>
                <button onclick="loadORBScanner()" class="btn">Scan ORB Stocks</button>
                <div id="orb-results" class="results"></div>
            </div>
            
            <div class="card">
                <h3>ðŸ’° FII/DII Activity</h3>
                <p>Foreign and Domestic Institutional Investor flows</p>
                <button onclick="loadFIIDII()" class="btn">Load Activity</button>
                <div id="fii-dii-results" class="results"></div>
            </div>
        </div>
        
        <div class="card">
            <h3>ðŸš€ Platform Features</h3>
            <div class="features">
                <div class="feature">
                    <h4>Technical Indicators</h4>
                    <p>RSI, MACD, Bollinger Bands, Support/Resistance</p>
                </div>
                <div class="feature">
                    <h4>Indian Market Focus</h4>
                    <p>NSE/BSE specific strategies and market hours</p>
                </div>
                <div class="feature">
                    <h4>Option Chain Analysis</h4>
                    <p>PCR, OI analysis, Max Pain calculation</p>
                </div>
                <div class="feature">
                    <h4>Real-time Data</h4>
                    <p>Live market data during trading hours</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Load market status on page load
        window.onload = function() {
            loadMarketStatus();
        };
        
        function loadMarketStatus() {
            fetch('/api/analyze/RELIANCE')
                .then(response => response.json())
                .then(data => {
                    const statusElement = document.getElementById('market-status');
                    if (data.marketStatus) {
                        statusElement.textContent = data.marketStatus.message;
                        statusElement.className = `market-status ${data.marketStatus.status === 'open' ? 'market-open' : 'market-closed'}`;
                    }
                })
                .catch(error => {
                    console.error('Error loading market status:', error);
                    document.getElementById('market-status').textContent = 'Unable to load market status';
                });
        }
        
        function analyzeStock() {
            const symbol = document.getElementById('stock-symbol').value.trim().toUpperCase();
            const resultsDiv = document.getElementById('stock-results');
            
            if (!symbol) {
                alert('Please enter a stock symbol');
                return;
            }
            
            resultsDiv.style.display = 'block';
            resultsDiv.innerHTML = '<div class="loading">Analyzing ' + symbol + '...</div>';
            
            fetch(`/api/analyze/${symbol}`)
                .then(response => response.json())
                .then(data => {
                    if (data.error) {
                        resultsDiv.innerHTML = `<div style="color: red;">Error: ${data.error}</div>`;
                        return;
                    }
                    
                    const stockData = data.stockData;
                    const analysis = data.analysis;
                    const signals = data.signals;
                    
                    resultsDiv.innerHTML = `
                        <h4>${data.symbol} Analysis</h4>
                        <p><strong>Price:</strong> â‚¹${stockData.price} (${stockData.changePercent > 0 ? '+' : ''}${stockData.changePercent}%)</p>
                        <p><strong>Volume:</strong> ${stockData.volume.toLocaleString('en-IN')}</p>
                        <p><strong>RSI:</strong> ${analysis.rsi.toFixed(2)}</p>
                        <p><strong>Support:</strong> â‚¹${analysis.support.toFixed(2)}</p>
                        <p><strong>Resistance:</strong> â‚¹${analysis.resistance.toFixed(2)}</p>
                        <p><strong>Trend:</strong> ${signals.trend.toUpperCase()}</p>
                        <p><strong>Recommendation:</strong> <span style="color: ${signals.recommendation === 'buy' ? 'green' : signals.recommendation === 'sell' ? 'red' : 'orange'}">${signals.recommendation.toUpperCase()}</span></p>
                    `;
                })
                .catch(error => {
                    console.error('Error:', error);
                    resultsDiv.innerHTML = '<div style="color: red;">Error analyzing stock</div>';
                });
        }
        
        function loadSectorHeatmap() {
            const resultsDiv = document.getElementById('sector-results');
            resultsDiv.style.display = 'block';
            resultsDiv.innerHTML = '<div class="loading">Loading sector heatmap...</div>';
            
            fetch('/api/sector-heatmap')
                .then(response => response.json())
                .then(data => {
                    let html = '<h4>Sector Performance</h4>';
                    data.sectors.forEach(sector => {
                        const color = sector.change > 0 ? 'green' : 'red';
                        html += `<p><strong>${sector.name}:</strong> <span style="color: ${color}">${sector.change > 0 ? '+' : ''}${sector.change}%</span></p>`;
                    });
                    resultsDiv.innerHTML = html;
                })
                .catch(error => {
                    console.error('Error:', error);
                    resultsDiv.innerHTML = '<div style="color: red;">Error loading heatmap</div>';
                });
        }
        
        function loadORBScanner() {
            const resultsDiv = document.getElementById('orb-results');
            resultsDiv.style.display = 'block';
            resultsDiv.innerHTML = '<div class="loading">Scanning ORB opportunities...</div>';
            
            fetch('/api/orb-scanner')
                .then(response => response.json())
                .then(data => {
                    let html = '<h4>ORB Opportunities</h4>';
                    data.stocks.forEach(stock => {
                        html += `<p><strong>${stock.symbol}:</strong> â‚¹${stock.currentPrice} (Breakout: â‚¹${stock.breakoutPrice})</p>`;
                    });
                    resultsDiv.innerHTML = html;
                })
                .catch(error => {
                    console.error('Error:', error);
                    resultsDiv.innerHTML = '<div style="color: red;">Error loading ORB data</div>';
                });
        }
        
        function loadFIIDII() {
            const resultsDiv = document.getElementById('fii-dii-results');
            resultsDiv.style.display = 'block';
            resultsDiv.innerHTML = '<div class="loading">Loading FII/DII activity...</div>';
            
            fetch('/api/fii-dii-activity')
                .then(response => response.json())
                .then(data => {
                    resultsDiv.innerHTML = `
                        <h4>FII/DII Activity (${data.date})</h4>
                        <p><strong>FII Equity:</strong> â‚¹${data.fii.equity.toFixed(0)} Cr</p>
                        <p><strong>DII Equity:</strong> â‚¹${data.dii.equity.toFixed(0)} Cr</p>
                        <p><strong>Net Flow:</strong> â‚¹${(data.fii.equity + data.dii.equity).toFixed(0)} Cr</p>
                    `;
                })
                .catch(error => {
                    console.error('Error:', error);
                    resultsDiv.innerHTML = '<div style="color: red;">Error loading FII/DII data</div>';
                });
        }
        
        // Allow Enter key to trigger stock analysis
        document.getElementById('stock-symbol').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                analyzeStock();
            }
        });
    </script>
</body>
</html>